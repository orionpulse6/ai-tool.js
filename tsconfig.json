{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2022", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/@microsoft"
    ],

    "strictPropertyInitialization": false,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
